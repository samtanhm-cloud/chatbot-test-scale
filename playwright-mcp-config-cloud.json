{
  "_comment": "Cloud configuration - Uses Chromium (bundled with Playwright) on Linux",
  "browser": {
    "headless": true,
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-gpu",
      "--disable-background-networking",
      "--disable-default-apps",
      "--no-first-run",
      "--disable-features=TranslateUI"
    ]
  },
  "defaultTimeout": 30000,
  "launchOptions": {
    "headless": true,
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-gpu"
    ]
  },
  "contextOptions": {
    "storageState": "auth/draftr-session.json"
  }
}

